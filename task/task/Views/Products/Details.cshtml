@model task.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2 style="text-align: center;color: #e25898;margin-top:8%">Details</h2>

<div style="margin-left: 20%;">
    <h4>Product</h4>
    <hr style="width: 75%;margin-bottom: 34px;" />
    <dl class="dl-horizontal">
        <dt style="color: #e25898;">
            @*@Html.LabelFor(model => model.Category.categoryname, htmlAttributes: new { @style = "color: #e25898;" })*@
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.categoryname)
        </dd>

        <dt>
            @Html.LabelFor(model => model.productname, htmlAttributes: new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productname)
        </dd>

        <dt>
            @Html.LabelFor(model => model.productdescription, htmlAttributes: new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productdescription)
        </dd>

        <dt>
            @Html.LabelFor(model => model.price, htmlAttributes: new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt>
            @Html.LabelFor(model => model.productpicture, htmlAttributes: new { @style = "color: #e25898;" })
        </dt>

        <dd>
            <img src="~/images/product/@Model.productpicture" style=" width: 300px;height: 300px;" />
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.productid }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

