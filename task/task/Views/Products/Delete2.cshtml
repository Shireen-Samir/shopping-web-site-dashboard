@model task.Models.Product

<h5>Are you sure you want to delete this?</h5>
<div>
    <h5>Product</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt style="color: #e25898;">
           Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.categoryname)
        </dd>

        <dt>
            @Html.LabelFor(model => model.productname, new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productname)
        </dd>

        <dt>
            @Html.LabelFor(model => model.productdescription, new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productdescription)
        </dd>

        <dt>
            @Html.LabelFor(model => model.price, new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            @Html.LabelFor(model => model.productpicture, new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productpicture)
        </dd>
        <dt>
            @Html.LabelFor(model => model.productpicture, new { @style = "color: #e25898;" })
        </dt>

        <dd>
            <img src="~/images/product/@Model.productpicture" style=" width: 200px;height: 200px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </div>
    }
</div>
