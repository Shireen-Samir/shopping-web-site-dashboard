@model task.Models.Category

<h5>Are you sure you want to delete this?</h5>
<div>
    <h5>Category</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.categoryname,new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoryname)
        </dd>

        <dt>
            @Html.LabelFor(model => model.categorydescription,new { @style = "color: #e25898;" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categorydescription)
        </dd>

        <dt>
            @Html.LabelFor(model => model.categorypicture,new { @style = "color: #e25898;" })
        </dt>

        <dd>
            <img src="~/images/category/@Model.categorypicture" style=" width: 200px;height: 200px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </div>
    }
</div>
